            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/b17"
            android:text="Power line Carrier Communication"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/b18"
            android:text="Sociology &amp; Elements of Indian History for Engineers"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/b19"
            android:text="Digital System Design"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/b20"
            android:text="Power line Carrier Communication"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/b21"
            android:text="Sociology &amp; Elements of Indian History for Engineers"
            android:layout_weight="1"
            />
    </LinearLayout>
</ScrollView>