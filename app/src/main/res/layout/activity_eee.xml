<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WELCOME TO EEE"
            android:textSize="40dp"
            android:gravity="center"
            android:id="@+id/eee11"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eee11"
            android:text="SYLLABUS"
            android:id="@+id/eee12"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eee12"
            android:id="@+id/eee13"
            android:text="IMPORTANT BOOKS THORUGHOUT YOUR STUDY"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eee13"
            android:text="RESULT"
            android:textSize="40dp"
            android:gravity="center"
            android:id="@+id/eee14"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eee15"
            android:layout_below="@id/eee14"
            android:gravity="center"
            android:weightSum="2"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMPLETE RESULT OF ALL STUDENTS"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/eee16"

                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FOR INDIVIDUAL RESULT"
                android:id="@+id/eee17"
                />
        </LinearLayout>





    </RelativeLayout>


</LinearLayout>
